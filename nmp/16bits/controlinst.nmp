op fret16()
	syntax = "fret"
	image = "0111 XXXX 00000000"
	action = {
		NPC<31..1> = A[11]<31..1>;
		NPC<0..0> = 0;
		TMP_1 = A[10];
		loadWord(A[11],TMP_1);
		A[10] = A[10]+4;
	}
