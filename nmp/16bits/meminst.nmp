   syntax = format("st.b %s,[%s]",b.syntax,a.syntax)
   image = format("%s%s00110100",b.image,a.image)
   action = 	{ 
		indice = b;
		M[indice] = a<7..0>;
		}
	otawa_sem = "STOREB(D(0), A(1));" 

op st_b_16_2(a:reg_d,b:reg_a)
